<% if current_user %>
  <div class="row">
    <aside class="col-md-4">
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
  </div>
  <h3>Post Feed</h3>
  <br>
  <div class="row">
    <%= render 'shared/feed' %>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Instagram</h1>
  </div>
<% end %>
