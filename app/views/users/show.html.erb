<div class="row">
  <div class="col-md-8">
    <%= image_tag  @user.display_avatar_profile if @user.image %>
    <%= @user.email %>
    <%= @user.name %>
    <%= @user.about %>
  </div>
</div>
<div class="row">

    <%= render 'shared/post_form' %>

</div>
<section class="stats">
  <%= render 'shared/stats' %>
</section>
<%= render 'follow_form' if current_user %>



<h3>Posts (<%= @user.posts.count %>)</h3>
<br>

<div class="row">
  <% if @user.posts.any? %>
    <%= render @posts %>
    <%= will_paginate @posts %>
  <% end %>
</div>
