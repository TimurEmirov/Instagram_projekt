<div class="row">
  <div>
    <%= image_tag @user.display_avatar_small if @user.image %>
    <%= @user.email %>
    <%= @user.name %>
    <%= @user.about %>
  </div>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
          <li>
            <%= link_to image_tag user.display_avatar_small if user.image %>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
